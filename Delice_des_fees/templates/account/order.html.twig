{% extends "base.html.twig" %}
{% block title %} {{ title }} {% endblock %}
{% block body %}
<br><br>
<div class="message"><h1> {{message}} </h1></div>

<div class="example-wrapper">
    Bienvenue {{ app.user.firstname}} {{ app.user.lastname}}. C'est ici que vous pourrez gérer toutes vos commandes.

<br>
        <a href="{{path('account')}}">Retourner à mon espace personnel <a/><hr>
<br>
<br>
{% if orders|length == 0 %}
<p class="text-center">

Vous n'avez pas encore passé de commandes

</p>

{% else %}
<table class="table">
  <thead>
    <tr>
      <th scope="col">Passée le</th>
      <th scope="col">Référence</th>
      <th scope="col">Produits</th>
      <th scope="col">Total</th>
       <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
{% for order in orders %}
    <tr>
      <td>{{order.createdAt|date('d/m/y')}}</td>
      <td>{{order.reference}}</td>
      <td>{{order.orderDetails|length}}</td>
      <td>{{(order.CarrierPrice + order.getTotal)|number_format(2, ',','.')}} €</td>
      <td><a href="{{path('account_order_show',{'reference':order.reference})}}">   Voir ma commande </a>  </td>
    </tr>
{% endfor %}
  </tbody>
</table>




{% endif %}
</div>
{% endblock %}

